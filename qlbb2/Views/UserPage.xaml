<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="qlbb2.Views.UserPage"
             x:Name="UserPageRoot"
             xmlns:helper="clr-namespace:qlbb2.Helper"
             Title="UserPage">
    <Grid RowDefinitions="Auto,*">
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Padding="10">
            <Entry x:Name="SearchEntry" Placeholder="Nhập tên user..." Text="{Binding SearchText}"  />
            <Button Text="Search" Command="{Binding SearchUsersCommand}" />
            <Button Text="Add"  Command="{Binding AddUserCommand}"/>
            <Button Text="Clear"  Command="{Binding ClearSearchCommand}"/>
            <Button Text="Refresh"  Command="{Binding RefreshUsersCommand}"/>
            <Label Text="{Binding [HelloMessage], Source={x:Static helper:LocalizationResourceManager.Instance}}" />
            <Button Text="{Binding [AddUserButton], Source={x:Static helper:LocalizationResourceManager.Instance}}" />
            <Button Text="đổi ngôn ngữ" Command="{Binding ChangeLanguageCommand}"/>
        </HorizontalStackLayout>
        <CollectionView Grid.Row="1"
                       ItemsSource="{Binding Users}" 
                       Margin="10,0,10,10"
                       VerticalScrollBarVisibility="Always">
            <CollectionView.Header>
                <Grid ColumnDefinitions="2*,2*,3*,Auto,Auto" Padding="10" BackgroundColor="AliceBlue">
                    <Label Text="UserId" Grid.Column="0" FontAttributes="Bold" />
                    <Label Text="UserName" Grid.Column="1" FontAttributes="Bold" />
                    <Label Text="Role" Grid.Column="2" FontAttributes="Bold" />
                    <Label Text="Actions" Grid.Column="3" FontAttributes="Bold" />
                    <Label Text="" Grid.Column="4" />
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="2*,2*,3*,Auto,Auto" Padding="10" BackgroundColor="White">
                        <Label Text="{Binding UserId}" Grid.Column="0" />
                        <Label Text="{Binding UserName}" Grid.Column="1" />
                        <Label Text="{Binding Role}" Grid.Column="2" />
                        <Button Text="Sửa quyền"
                                Grid.Column="3"
                                Command="{Binding Source={x:Reference UserPageRoot}, Path=BindingContext.EditUserCommand}"
                                CommandParameter="{Binding .}" />
                        <Button Text="Xóa"
                                 Grid.Column="4"
                                 Command="{Binding Source={x:Reference UserPageRoot}, Path=BindingContext.DeleteUserCommand}"
                                 CommandParameter="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>